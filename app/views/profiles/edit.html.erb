<h1>Edit Profile</h1>

<%= form_with model: @profile, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to 'Back', @profile %>
